<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>CUSTOM-install</actionName>
        <displayName>install</displayName>
        <goals>
            <goal>install</goal>
        </goals>
        <properties>
            <skipTests>true</skipTests>
        </properties>
    </action>
    <action>
        <actionName>run</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
        </goals>
        <properties>
            <exec.classpathScope>runtime</exec.classpathScope>
            <exec.args>-Xms2000m -Xmx2000m -XX:PermSize=40m -XX:MaxPermSize=40m -classpath %classpath com.graphhopper.GraphHopper -Dgraphhopper.config=../config.properties osmreader.algo=dijkstra osmreader.osm=/media/SAMSUNG/maps/germany.osm.pbf</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
        </goals>
        <properties>
            <exec.classpathScope>runtime</exec.classpathScope>
            <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Xms2000m -Xmx2000m -XX:PermSize=40m -XX:MaxPermSize=40m -classpath %classpath com.graphhopper.GraphHopper -Dgraphhopper.config=../config.properties osmreader.algo=dijkstra osmreader.osm=/media/SAMSUNG/maps/germany.osm.pbf</exec.args>
            <jpda.listen>true</jpda.listen>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.1.1:exec</goal>
        </goals>
        <properties>
            <exec.args>${profiler.args} -Xms2000m -Xmx2000m -XX:PermSize=40m -XX:MaxPermSize=40m -classpath %classpath com.graphhopper.GraphHopper -Dgraphhopper.config=../config.properties osmreader.algo=dijkstra osmreader.osm=/media/SAMSUNG/maps/germany.osm.pbf</exec.args>
            <profiler.action>profile</profiler.action>
            <exec.executable>${profiler.java}</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-assembly</actionName>
        <displayName>clean assembly</displayName>
        <goals>
            <goal>clean</goal>
            <goal>install</goal>
            <goal>assembly:single</goal>
        </goals>
        <properties>
            <skipTests>true</skipTests>
        </properties>
    </action>
</actions>
